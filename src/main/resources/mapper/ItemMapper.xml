<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.green.campingsmore.item.ItemMapper">
    <insert id="insItem" parameterType="ItemInsDto">
       <selectKey  keyProperty="Category" resultType="int" order="AFTER">
           SELECT name FROM item_category
           WHERE name = #{Category}
       </selectKey>
        INSERT INTO item
        SET
        <if test="iitemCategory != null and iitemCategory != '' ">
            iitemp_category = #{iitemCategory},
            name = #{name},
            price = #{price},
            pic = #{pic}
        </if>

    </insert>




</mapper>